include ../partials/header.pug
//h1 Hello #{data[0].username}
img.img-fluid(src='../img/UmbrellaLogo1.png' alt='Registration')
br
br
// Buttons to select if coach or player
.btn-group.form-group
  form
    button.button.buttonC(value='C' onclick="viewForm('coach_form', 1); viewForm('player_form', 0)") Coach
    button.button.buttonP(value='P' onclick="viewForm('player_form', 1); viewForm('coach_form', 0); loadTeams()") Player
// Player Form
#player_form.container
  form(action='home.html')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_fullName') Full Name
      .col-sm-10
        input#player_fullName.form-control(type='text' name='player_fullName' placeholder='Enter Name')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_userName') Username
      .col-sm-10
        input#player_userName.form-control(type='text' name='player_userName' placeholder='Enter Username')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_emailAddress') Email address
      .col-sm-10
        input#player_emailAddress.form-control(type='email' name='player_emailAddress' placeholder='Enter email')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_phoneNumber') Phone number
      .col-sm-10
        input#player_phoneNumber.form-control(type='text' name='player_phoneNumber' placeholder='Enter phone number')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_passwordFirst') Password
      .col-sm-10
        input#player_passwordFirst.form-control(type='password' name='player_passwordFirst' placeholder='Password')
    .form-group.row
      label.col-sm-2.col-form-label(for='player_passwordConfirm') Confirm Password
      .col-sm-10
        input#player_passwordConfirm.form-control(type='password' name='player_passwordConfirm' placeholder='Confirm Password')
    //
      <fieldset class="form-group">
      <div class="row" id="team">
      <select name="team_name" id="team_joined" class="custom-select custom-select-sm">
      <option selected>Select Team</option>
      </select>
      </div>
      </fieldset>
    .dropdown
      button#selectTeamButton.btn.btn-block.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' style='background-color: #7AC8FF; border-color: #3D6480')
        | Select a Team
      #team_selector.dropdown-menu(aria-labelledby='selectPlayerButton')
    input.btn.btn-primary.btn-block(type='submit' value='Submit' style='background-color: #61A0CC; border-color: #3D6480')
  br
// Coach Form
#coach_form.container
  form(action='home.html')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_fullName') Full Name
      .col-sm-10
        input#coach_fullName.form-control(type='text' name='coach_fullName' placeholder='Enter Name')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_userName') Username
      .col-sm-10
        input#coach_userName.form-control(type='text' name='coach_userName' placeholder='Enter Username')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_emailAddress') Email address
      .col-sm-10
        input#coach_emailAddress.form-control(type='email' name='coach_emailAddress' placeholder='Enter email')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_phoneNumber') Phone number
      .col-sm-10
        input#coach_phoneNumber.form-control(type='text' name='coach_phoneNumber' placeholder='Enter phone number')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_passwordFirst') Password
      .col-sm-10
        input#coach_passwordFirst.form-control(type='password' name='coach_passwordFirst' placeholder='Password')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_passwordConfirm') Confirm Password
      .col-sm-10
        input#coach_passwordConfirm.form-control(type='password' name='coach_passwordConfirm' placeholder='Confirm Password')
    .form-group.row
      label.col-sm-2.col-form-label(for='coach_createTeam') Create a Team
      .col-sm-10
        input#coach_createTeam.form-control(type='new_team_name' name='coach_createTeam' placeholder='Enter Team Name')
    input.btn.btn-primary.btn-block(type='button' value='Temporary create team button - would be combined with Submit in final proj' onclick="createTeam('coach_createTeam')" style='background-color: #61A0CC; border-color: #3D6480')
