doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
  title Team Page
  link(rel='icon' href='../img/UmbrellaLogo.png')
  link(rel='stylesheet' href='../css/bootstrap.min.css')
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i')
  link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css' integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='../css/teampage.css')
nav.navbar.navbar-light.navbar-expand-lg.fixed-top.bg-white.clean-navbar
  .container
    img#logo(src='../img/UmbrellaLogo1.png')
    button.navbar-toggler(data-toggle='collapse' data-target='#navcol-1')
      span.sr-only Toggle navigation
      span.navbar-toggler-icon
    #navcol-1.collapse.navbar-collapse
      ul.nav.navbar-nav.ml-auto
        li.nav-item(role='presentation')
          a.nav-link(href='PlayerPage.html') Home
        li.nav-item(role='presentation')
          a.nav-link(href='teampage.html') Team Page
        li.nav-item(role='presentation')
          a.nav-link(href='bracketpage.html') Stats
main.page.testimonials
  section.clean-block.dark
    .container
      .block-heading
        h2.text-info=data2[0].TeamName
        p.lead=data2[0].TeamDesc
      .row
        .col
          button.btn.btn-primary(type='button') +
      br
      if(data1)
      -var count=0
        for item in data1
          if (count>0 && count%3==0)
            </div><div class="row">
          else if (count==0)
            <div class="row">
          .col-lg-4
            .card.border-2.border-primary
                .card-body
                  .btn-group.pull-right
                    button.btn
                      i.fa.fa-trash
                -var source=""
                -source="../img/portrait/"+item.username+".jpg"
                  img.rounded.mx-auto(src=source)
                  h4.text-center=item.username
                  if item.UserGroup_Id === 2 
                    h5.text-center.text-primary Player
                  else
                    h5.text-center.text-primary Coach
            -count++
        
    br
    p Upcoming Matches
    ul.list-group
      li.list-group-item
        span Team Name #2
        p @7PM City Park, Boulder
      li.list-group-item
        span Team Name #3
        p @1PM City Park, Lafayette
      li.list-group-item
        span Team name #4
        p N/a
    ul.list-group
